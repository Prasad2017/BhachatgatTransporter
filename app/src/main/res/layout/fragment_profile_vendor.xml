<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nestedView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:gravity="center"
                    app:boxStrokeColor="@color/light_black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/light_black">

                    <EditText
                        android:id="@+id/fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="Enter Full Name (Ex.Demo)"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:fontFamily="@font/montserratmedium"
                        android:padding="15dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:imeOptions="actionNext"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    android:gravity="center"
                    app:boxStrokeColor="@color/light_black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/light_black">

                    <EditText
                        android:id="@+id/lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="Enter Last Name (Ex.Demo)"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:drawableTint="@color/colorAccent"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:fontFamily="@font/montserratmedium"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:imeOptions="actionNext"
                        android:textStyle="bold"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                app:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserratmedium"
                    android:hint="Enter Mobile (Ex.9876543210)"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawableTint="@color/colorAccent"
                    android:textSize="16sp"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:digits="0123456789"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:focusable="false"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                app:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <EditText
                    android:id="@+id/pancard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    android:hint="Enter Pan Card (Ex.ASDER2134H)"
                    android:fontFamily="@font/montserratmedium"
                    android:maxLength="10"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:drawableTint="@color/colorAccent"
                    android:padding="15dp"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:capitalize="characters"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                app:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <EditText
                    android:id="@+id/gstnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserratmedium"
                    android:hint="Enter GST (Ex.27AAPFU0939F1ZV)"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:drawableTint="@color/colorAccent"
                    android:padding="15dp"
                    android:imeOptions="actionNext"
                    android:textAllCaps="true"
                    android:inputType="textCapCharacters"
                    android:capitalize="characters"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                app:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserratmedium"
                    android:hint="Enter Address (Ex.Pune)"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:drawableTint="@color/colorAccent"
                    android:padding="15dp"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                app:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:drawableTint="@color/colorAccent"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Enter Email (Ex.demo@gmail.com)"
                    android:textSize="16sp"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratmedium"
                    android:padding="15dp"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/update"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/updateborder"
                android:text="Update"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratmedium"
                android:textStyle="bold"
                android:textSize="20sp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

