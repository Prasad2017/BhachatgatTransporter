<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:whatever="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right|center"
        android:layout_margin="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_close"
        android:background="@drawable/close"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailslabel"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:background="@null"
                android:text="Truck Details"
                android:textStyle="bold"
                android:textSize="20sp"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:singleLine="true"
                android:padding="5dp"
                android:fontFamily="@font/montserratregular" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserratregular"
                android:gravity="center|left"
                android:imeOptions="actionDone"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Truck Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/trucktypespin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:hintText="Select Truck Name"
                android:visibility="gone"
                android:background="@drawable/spinnerbackground"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <EditText
                    android:id="@+id/trucknumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Truck Number"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:maxLength="10"
                    android:textAllCaps="true"
                    android:capitalize="characters"
                    android:inputType="textCapCharacters"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                android:visibility="gone"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <EditText
                    android:id="@+id/truckweight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Truck Width (In Feet)"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:padding="15dp"
                    android:maxLength="6"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                android:visibility="gone"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <EditText
                    android:id="@+id/truckheight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Truck Height (In Feet)"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center|left"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:maxLength="6"
                    android:padding="15dp"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                android:visibility="gone"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <EditText
                    android:id="@+id/trucklength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Truck Length (In Feet)"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:padding="15dp"
                    android:maxLength="6"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionNext"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- <android.support.design.widget.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:textColorHint="@color/light_black">

                 <EditText
                     android:id="@+id/truckcapacity"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/black"
                     android:drawablePadding="10dp"
                     android:fontFamily="@font/gothic"
                     android:hint="Truck Capacity (In ton)"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                     android:textSize="16sp"
                     android:layout_gravity="center|left"
                     android:gravity="center|left"
                     android:padding="15dp"
                     android:inputType="numberDecimal"
                     android:textStyle="bold"
                     android:maxLength="6"
                     android:imeOptions="actionNext"
                     android:singleLine="true"/>

             </android.support.design.widget.TextInputLayout>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserratregular"
                android:gravity="center|left"
                android:imeOptions="actionDone"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Truck Capacity"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/truckcapacityspin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:hintText="Select Truck Capacity"
                android:visibility="gone"
                android:background="@drawable/spinnerbackground"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                whatever:boxCornerRadiusBottomEnd="5dp"
                whatever:boxCornerRadiusBottomStart="5dp"
                whatever:boxCornerRadiusTopEnd="5dp"
                whatever:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                whatever:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <EditText
                    android:id="@+id/trucktyres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserratregular"
                    android:hint="Truck Tyres "
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:padding="15dp"
                    android:inputType="numberDecimal"
                    android:textStyle="bold"
                    android:maxLength="2"
                    android:digits="0123456789"
                    android:imeOptions="actionDone"
                    android:singleLine="true"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/rcBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserratregular"
                android:gravity="center|left"
                android:imeOptions="actionDone"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="Upload RC Book * "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/editextborder"
                app:siRadius="6dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:siSquare="true"
                android:id="@+id/imageView"/>


            <TextView
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@color/main_green_stroke_color"
                android:text="Save"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratregular"
                android:textStyle="bold"
                android:textSize="25sp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>